---
import { Rss, Github } from 'lucide-astro';

const currentYear = new Date().getFullYear();
---

<footer class="footer" data-pagefind-ignore>
  <div class="footer-inner">
    <p class="copyright">&copy; {currentYear} maguro.dev</p>
    <nav class="footer-links">
      <a href="/rss.xml" title="RSS Feed" class="icon-link"><Rss size={18} /></a>
      <a href="https://github.com/magurotuna" target="_blank" rel="noopener" title="GitHub" class="icon-link"><Github size={18} /></a>
      <a href="https://x.com/yusuktan" target="_blank" rel="noopener" title="X" class="icon-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
      </a>
    </nav>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    border-top: 1px solid var(--color-border);
    margin-top: auto;
  }

  .footer-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: calc(var(--spacing-unit) * 2);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--spacing-unit);
  }

  .copyright {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  .footer-links {
    display: flex;
    gap: calc(var(--spacing-unit) * 1.5);
  }

  .footer-links a {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  @media (max-width: 480px) {
    .footer-inner {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
