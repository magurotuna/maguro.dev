---
// Search component using Pagefind
---

<div id="search" class="search-container"></div>

<script>
  // Only initialize Pagefind in production (index doesn't exist during dev)
  if (!import.meta.env.DEV) {
    import('@pagefind/default-ui').then(({ PagefindUI }) => {
      new PagefindUI({
        element: '#search',
        showSubResults: true,
        showImages: false,
        resetStyles: true,
      });
    });
  } else {
    // Show placeholder in dev mode
    const el = document.getElementById('search');
    if (el) {
      el.innerHTML = '<div class="search-dev-placeholder">Search (build to enable)</div>';
    }
  }
</script>

<style>
  .search-container {
    position: relative;
  }

  .search-dev-placeholder {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    padding: 0.4rem 0.8rem;
    border: 1px dashed var(--color-border);
    border-radius: 6px;
    white-space: nowrap;
  }

  /* Pagefind UI Overrides */

  /* Search input wrapper */
  :global(.pagefind-ui) {
    --pagefind-ui-scale: 0.85;
    --pagefind-ui-primary: var(--color-accent);
    --pagefind-ui-text: var(--color-text);
    --pagefind-ui-background: var(--color-bg);
    --pagefind-ui-border: var(--color-border);
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 6px;
    --pagefind-ui-font: var(--font-sans);
  }

  :global(.pagefind-ui__form) {
    position: relative;
  }

  /* Search input field */
  :global(.pagefind-ui__search-input) {
    font-family: var(--font-sans) !important;
    font-size: 0.9rem !important;
    color: var(--color-text) !important;
    background-color: var(--color-bg-secondary) !important;
    border: 1px solid var(--color-border) !important;
    border-radius: 6px !important;
    padding: 0.5rem 0.75rem 0.5rem 2.25rem !important;
    width: 180px !important;
    transition: width 0.2s ease, border-color 0.2s ease, background-color 0.2s ease !important;
  }

  :global(.pagefind-ui__search-input:focus) {
    outline: none !important;
    border-color: var(--color-accent) !important;
    width: 240px !important;
  }

  :global(.pagefind-ui__search-input::placeholder) {
    color: var(--color-text-secondary) !important;
    opacity: 0.7 !important;
  }

  /* Search icon */
  :global(.pagefind-ui__search-icon) {
    position: absolute;
    left: 0.65rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1rem;
    height: 1rem;
    color: var(--color-text-secondary);
    opacity: 0.6;
  }

  /* Clear button */
  :global(.pagefind-ui__search-clear) {
    background: none !important;
    border: none !important;
    color: var(--color-text-secondary) !important;
    cursor: pointer !important;
    padding: 0.25rem !important;
    position: absolute !important;
    right: 0.5rem !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
  }

  :global(.pagefind-ui__search-clear:hover) {
    color: var(--color-text) !important;
  }

  /* Results drawer */
  :global(.pagefind-ui__drawer) {
    position: absolute !important;
    top: calc(100% + 0.5rem) !important;
    right: 0 !important;
    left: auto !important;
    width: 400px !important;
    max-width: 90vw !important;
    max-height: 70vh !important;
    overflow-y: auto !important;
    background-color: var(--color-bg) !important;
    border: 1px solid var(--color-border) !important;
    border-radius: 8px !important;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
    z-index: 1000 !important;
  }

  [data-theme="dark"] :global(.pagefind-ui__drawer) {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4) !important;
  }

  /* Results container */
  :global(.pagefind-ui__results-area) {
    padding: 0 !important;
  }

  /* Result count / message */
  :global(.pagefind-ui__message) {
    font-size: 0.8rem !important;
    color: var(--color-text-secondary) !important;
    padding: 0.75rem 1rem !important;
    border-bottom: 1px solid var(--color-border) !important;
    background-color: var(--color-bg-secondary) !important;
  }

  /* Individual result */
  :global(.pagefind-ui__result) {
    padding: 0.875rem 1rem !important;
    border-bottom: 1px solid var(--color-border) !important;
    display: block !important;
    transition: background-color 0.15s ease !important;
  }

  :global(.pagefind-ui__result:last-child) {
    border-bottom: none !important;
  }

  :global(.pagefind-ui__result:hover) {
    background-color: var(--color-bg-secondary) !important;
  }

  /* Result link */
  :global(.pagefind-ui__result-link) {
    text-decoration: none !important;
  }

  /* Result title */
  :global(.pagefind-ui__result-title) {
    font-size: 0.95rem !important;
    font-weight: 600 !important;
    color: var(--color-text) !important;
    margin-bottom: 0.35rem !important;
    line-height: 1.3 !important;
  }

  :global(.pagefind-ui__result:hover .pagefind-ui__result-title) {
    color: var(--color-accent) !important;
  }

  /* Result excerpt */
  :global(.pagefind-ui__result-excerpt) {
    font-size: 0.85rem !important;
    color: var(--color-text-secondary) !important;
    line-height: 1.5 !important;
    display: -webkit-box !important;
    -webkit-line-clamp: 2 !important;
    -webkit-box-orient: vertical !important;
    overflow: hidden !important;
  }

  /* Highlighted match in excerpt */
  :global(.pagefind-ui__result-excerpt mark) {
    background-color: transparent !important;
    color: var(--color-accent) !important;
    font-weight: 600 !important;
  }

  /* Sub-results (additional matches in same page) */
  :global(.pagefind-ui__result-nested) {
    margin-left: 1rem !important;
    padding-left: 0.75rem !important;
    border-left: 2px solid var(--color-border) !important;
    margin-top: 0.5rem !important;
  }

  :global(.pagefind-ui__result-nested .pagefind-ui__result-excerpt) {
    font-size: 0.8rem !important;
  }

  /* Loading state */
  :global(.pagefind-ui__loading) {
    padding: 1.5rem !important;
    text-align: center !important;
    color: var(--color-text-secondary) !important;
    font-size: 0.85rem !important;
  }

  /* No results */
  :global(.pagefind-ui__no-results) {
    padding: 1.5rem 1rem !important;
    text-align: center !important;
    color: var(--color-text-secondary) !important;
    font-size: 0.9rem !important;
  }

  /* Hide default button styling */
  :global(.pagefind-ui__button) {
    background-color: var(--color-bg-secondary) !important;
    border: 1px solid var(--color-border) !important;
    color: var(--color-text) !important;
    font-family: var(--font-sans) !important;
    font-size: 0.85rem !important;
    padding: 0.5rem 1rem !important;
    border-radius: 6px !important;
    cursor: pointer !important;
    margin: 0.5rem 1rem 1rem !important;
    transition: background-color 0.15s ease !important;
  }

  :global(.pagefind-ui__button:hover) {
    background-color: var(--color-border) !important;
  }

  /* Responsive: narrower on mobile */
  @media (max-width: 600px) {
    :global(.pagefind-ui__search-input) {
      width: 140px !important;
    }

    :global(.pagefind-ui__search-input:focus) {
      width: 180px !important;
    }

    :global(.pagefind-ui__drawer) {
      width: calc(100vw - 2rem) !important;
      right: -1rem !important;
    }
  }
</style>
