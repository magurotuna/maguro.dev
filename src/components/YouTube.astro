---
interface Props {
  id: string;
  title?: string;
  start?: number;
}

const { id, title = "YouTube video", start } = Astro.props;
const params = new URLSearchParams();
if (start != null) params.set("start", String(start));
const query = params.toString();
const embedUrl = `https://www.youtube-nocookie.com/embed/${id}${query ? `?${query}` : ""}`;
---

<div class="youtube-container">
  <iframe
    src={embedUrl}
    title={title}
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    loading="lazy"></iframe>
</div>

<style>
  .youtube-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    margin: var(--spacing-unit) 0;
    background-color: var(--color-bg-secondary);
    border-radius: 6px;
    overflow: hidden;
  }

  .youtube-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }
</style>
