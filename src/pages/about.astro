<style>
  .about {
    padding-top: calc(var(--spacing-unit) * 2);
  }

  .profile-header {
    display: flex;
    align-items: center;
    gap: calc(var(--spacing-unit) * 1.5);
    margin-bottom: calc(var(--spacing-unit) * 1.5);
  }

  .avatar {
    width: 96px;
    height: 96px;
    border-radius: 50%;
    object-fit: cover;
  }

  .profile-info {
    display: flex;
    flex-direction: column;
  }

  .name {
    margin: 0 0 calc(var(--spacing-unit) * 0.5) 0;
  }

  .email {
    margin: 0;
  }

  .alias,
  .no-spam {
    color: var(--color-text-secondary);
    font-size: 0.9em;
  }

  .history {
    margin-top: calc(var(--spacing-unit) * 2);
  }

  .history h2 {
    font-size: 1rem;
    margin-bottom: var(--spacing-unit);
    color: var(--color-text-secondary);
  }

  .history ul {
    list-style: none;
    padding: 0;
  }

  .history li {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
    margin-bottom: calc(var(--spacing-unit) * 0.75);
  }

  .history .period {
    color: var(--color-text-secondary);
    font-size: 0.9em;
    min-width: 120px;
  }

  .history .org {
    font-weight: 600;
  }

  .history .role {
    color: var(--color-text-secondary);
  }

  .links ul {
    list-style: disc;
    padding-left: 1.5rem;
  }

  .links li {
    display: list-item;
  }

  /* Mobile responsive */
  @media (max-width: 600px) {
    .profile-header {
      flex-direction: column;
      text-align: center;
    }

    .profile-info {
      align-items: center;
    }

    .history li {
      flex-direction: column;
      gap: 0.25rem;
    }

    .history .period {
      min-width: unset;
    }
  }
</style>
